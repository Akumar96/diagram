{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "../",
    "baseUrl": "./",
    "lib": ["es6", "es7", "dom"]
  },
  "exclude": ["lib", "build", "node_modules"]
}
